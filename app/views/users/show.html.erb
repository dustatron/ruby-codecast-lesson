<div class="row">
    <div id="profile-image" class="col-md-3">
        <%= image_tag @user.profile.avatar.url(:thumb) %>
    </div>
    
    <div class="col-md-9">
        <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
        <h3><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
        <%= @user.profile.id %>
        <div class="well">
            <p><%= @user.profile.description %></p>    
        </div>
        
        <div class="well">
        <% if current_user.plan_id == 2 || current_user.id == @user.id%>
            
                <p><%= @user.profile.contact_email %></p>
         
            
          
                <p><%= @user.profile.phone_number %></p>
            
        <% end %>            
        </div>

    </div>
    
    
    
    
</div>
