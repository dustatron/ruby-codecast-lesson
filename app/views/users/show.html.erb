<div class="row text-center">
    <div class="col-md-6 col-md-offset-3">
        <h2>
           <%= @user.profile.first_name %> <%= @user.profile.last_name %> 
        </h2>
        <div class="row">
            <p><%= @user.profile.job_title %></p>
        </div>
        <div class="row">
            <%= image_tag @user.profile.avatar.url(:thumb) %>
        </div>
        
         <div class="row">
            <p><%= @user.profile.description %></p>
        </div>      
        <% if current_user.plan_id == 2 || current_user.id == @user.id%>
            <div class="row">
                <p><%= @user.profile.contact_email %></p>
            </div>
            
            <div class="row">
                <p><%= @user.profile.phone_number %></p>
            </div>
        <% end %>
    </div>
    
</div>
